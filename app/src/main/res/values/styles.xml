<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="suvProgressColor">#88000000</item><!--定义SmoothUploadView遮罩层（ProgressBar）背景（必须）-->
        <item name="suvCornersRadius">6dp</item><!--定义SmoothUploadView为圆角，默认为直角（非必须）-->
    </style>

    <style name="SecondTheme" parent="AppTheme">
        <item name="suvCornersRadius">0dp</item>
        <item name="suvProgressColor">#AA000000</item>
    </style>

</resources>
